<%= bootstrap_form_for [@restaurant, @review] do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    Content : <%= f.text_area :content %><br />
    Rating : <%= f.select(:rating, "
      <option>0</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>".html_safe)
       %> <br />
    <%= f.submit %>
<% end %>